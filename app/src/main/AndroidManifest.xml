<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lifeline">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".presentation.LifelineApplication"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Lifeline">
        <activity android:name=".presentation.ui.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.sign_in.SignInActivity"/>
        <activity android:name=".presentation.ui.sign_up.SignUpActivity"/>
        <activity android:name=".presentation.ui.DefaultActivity"/>
    </application>
</manifest>